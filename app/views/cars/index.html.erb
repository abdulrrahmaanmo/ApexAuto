<div class="heading-container">
  <h1>Cars Available: <small class="results-count"><%= @cars.length %> Results</small></h1>
</div>

<div class="row">
  <% @cars.each do |car| %>
    <div class="col-md-6">
      <div class="card">
        <div class="card-body d-flex">
          <!-- Car image column -->
          <div class="col-md-4 car-div">
            <% if car.photos.first.present? %>
              <%= cl_image_tag car.photos.first.key, alt: "#{car.brand} #{car.model}", width: "300px", height: "300px", class: "car-image " %>
            <% else %>
              <%= image_tag asset_path("img car.png"), alt: "#{car.brand} #{car.model}", class: "car-image img-fluid" %>
            <% end %>
          </div>
          <!-- Car details column -->
          <div class="col-md-8 d-flex">
            <div class="description-title">
              <h5 class="card-title"><%= "#{car.brand} #{car.model}" %></h5>
              <p class="card-text">Description about the car goes here.</p>
            </div>
            <div class="text-end best-price">
              <p class="vehicle-pricing">BEST PRICE</p>
              <p class="price-text">Â£<%= "#{car.price_per_day}/day" %></p>

              <%= link_to "Select", car_path(car), class: "btn btn-primary" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>









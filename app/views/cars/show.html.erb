<div class="container-fluid py-5 car-background">
    <div class="bg-light shadow-lg rounded main-container">
        <div class="text-center text-white p-5 car-header">
            <%= content_tag :h1, "#{@cars.brand} #{@cars.model}", class: "display-4 fw-bold text-shadow" %>
            <div id="carouselExample" class="carousel slide" data-ride="carousel">
              <div class="carousel-inner">
                <% @cars.photos.each_with_index do |photo, index| %>
                  <div class="carousel-item <%= 'active' if index === 0 %>">
                    <div class="d-flex align-items-center justify-content-center w-100">
                      <%= cl_image_tag photo.key, class: "d-block w-50" %>
                    </div>
                  </div>
                <% end %>
              </div>
              <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
              </button>
              <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
              </button>
            </div>

        </div>
        <div class="row justify-content-center align-items-center">
            <div class="col-md-6">
                <div class="card border-primary shadow">
                    <div class="card-body">
                        <h5 class="card-title"><%= "#{@cars.brand} #{@cars.model}" %></h5>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item"><i class="bi bi-palette-fill"></i> Color : <%= @cars.color %></li>
                            <li class="list-group-item"><i class="bi bi-palette-fill"></i> Bluetooth Supported? : <%= @cars.bluetooth %></li>
                            <li class="list-group-item"><i class="bi bi-palette-fill"></i> Automatic? : <%= @cars.automatic %></li>
                            <li class="list-group-item"><i class="bi bi-palette-fill"></i> Seats : <%= @cars.seats %></li>
                            <li class="list-group-item"><i class="bi bi-palette-fill"></i> Price / Day : Â£ <%= @cars.price_per_day %></li>
                            <li class="list-group-item"><i class="bi bi-palette-fill"></i> Fuel Type : <%= @cars.fuel_type %></li>
                            <!-- Add more list items here -->
                        </ul>
                        <%= link_to "Go back", cars_path, class: "btn custom-btn-secondary mt-3 me-2" %>
                        <%= link_to "Rent This Car", new_car_booking_path(@cars), class: "btn custom-btn-primary mt-3" %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid py-5 car-background">
    <div id="mainshow-container">
        <div class="text-center  p-5 car-header">
            <%= content_tag :h1, "#{@cars.brand} #{@cars.model}", class: " showheader" %>
            <div id="carouselExample" class="carousel slide" data-ride="carousel">
              <div class="carousel-inner">
                <% @cars.photos.each_with_index do |photo, index| %>
                  <div class="carousel-item <%= 'active' if index === 0 %>">
                    <div class="d-flex align-items-center justify-content-center w-100">
                      <%= cl_image_tag photo.key, class: "d-block w-50 showimg" %>
                    </div>
                  </div>
                <% end %>
              </div>
              <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
                <i class="fa-solid fa-chevron-left fa-2xl" style="color: #FF6600;"></i>
                <span class="visually-hidden">Previous</span>
              </button>
              <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
                <i class="fa-sharp fa-solid fa-chevron-right fa-2xl" style="color: #FF6600;"></i>
                <span class="visually-hidden">Next</span>
              </button>
            </div>

        </div>
        <div class="row justify-content-center align-items-center">
            <div class="bottom-card">
                <div id="box">
                    <div id="show-card-body">
                        <h5 class="showh1"><%= "#{@cars.brand} #{@cars.model}" %></h5>
                        <ul id="carinfo" class="list-group list-group-flush">
                            <li ><i class="bi bi-palette-fill"></i> Color : <%= @cars.color %></li>
                            <li ><i class="bi bi-palette-fill"></i> Bluetooth Supported ? : <%= @cars.bluetooth ? "Yes" : "No" %></li>
                            <li ><i class="bi bi-palette-fill"></i> Transmission : <%= @cars.automatic ? "Automatic" : "Manual" %></li>
                            <li ><i class="bi bi-palette-fill"></i> Seats : <%= @cars.seats %></li>
                            <li ><i class="bi bi-palette-fill"></i> Price / Day : Â£ <%= @cars.price_per_day %></li>
                            <li ><i class="bi bi-palette-fill"></i> Fuel Type : <%= @cars.fuel_type %></li>
                            <!-- Add more list items here -->
                        </ul>
                        <%= link_to "Go back", cars_path, class: "showbtn" %>
                        <%= link_to "Rent This Car", new_car_booking_path(@cars), class: "showbtn" %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
